<!-- vi: set et smarttab sw=4 tabstop=4: -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.frinx.translate.unit.commons</groupId>
        <artifactId>checkstyle-parent</artifactId>
        <version>4.2.7.rc10-frinx-SNAPSHOT</version>
        <relativePath/>
    </parent>

    <groupId>io.frinx.cli</groupId>
    <artifactId>unit-parent</artifactId>
    <version>4.2.7.rc10-frinx-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <cli.version>4.2.7.rc10-frinx-SNAPSHOT</cli.version>
        <openconfig.version>4.2.7.rc10-frinx-SNAPSHOT</openconfig.version>
        <hc.version>1.18.04-Oxygen-SR2.4_2_7_rc10-frinxodl</hc.version>
        <controller.version>1.7.2-Oxygen-SR2.4_2_7_rc10-frinxodl</controller.version>
        <yangtools.version>2.0.5-Oxygen-SR2.4_2_7_rc10-frinxodl</yangtools.version>
        <mdsal.model.version>0.12.2-Oxygen-SR2.4_2_7_rc10-frinxodl</mdsal.model.version>
        <mdsal.version>2.4.2-Oxygen-SR2.4_2_7_rc10-frinxodl</mdsal.version>
        <translate.unit.commons.version>4.2.7.rc10-frinx-SNAPSHOT</translate.unit.commons.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.opendaylight.yangtools</groupId>
                <artifactId>yangtools-artifacts</artifactId>
                <type>pom</type>
                <version>${yangtools.version}</version>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.opendaylight.mdsal.model</groupId>
                <artifactId>mdsal-model-artifacts</artifactId>
                <type>pom</type>
                <version>${mdsal.model.version}</version>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.opendaylight.mdsal</groupId>
                <artifactId>mdsal-artifacts</artifactId>
                <type>pom</type>
                <version>${mdsal.version}</version>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.opendaylight.controller</groupId>
                <artifactId>mdsal-artifacts</artifactId>
                <type>pom</type>
                <version>${controller.version}</version>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>io.frinx.openconfig</groupId>
                <artifactId>openconfig-artifacts</artifactId>
                <type>pom</type>
                <version>${openconfig.version}</version>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>io.frinx.cli</groupId>
                <artifactId>cli-artifacts</artifactId>
                <type>pom</type>
                <version>${cli.version}</version>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>cli-units-artifacts</artifactId>
                <type>pom</type>
                <version>${project.version}</version>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>io.frinx.translate.unit.commons</groupId>
            <artifactId>utils</artifactId>
            <version>${translate.unit.commons.version}</version>
        </dependency>
        <dependency>
            <groupId>io.frinx.translate.unit.commons</groupId>
            <artifactId>handlers</artifactId>
            <version>${translate.unit.commons.version}</version>
        </dependency>
        <dependency>
            <groupId>io.frinx.cli</groupId>
            <artifactId>utils-unit</artifactId>
            <version>${cli.version}</version>
        </dependency>

        <!-- Cli -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>translation-registry-api</artifactId>
            <version>${cli.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>translation-registry-spi</artifactId>
            <version>${cli.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>io-api</artifactId>
            <version>${cli.version}</version>
        </dependency>

        <!-- Honeycomb -->
        <dependency>
            <groupId>io.fd.honeycomb</groupId>
            <artifactId>rpc-api</artifactId>
            <version>${hc.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.fd.honeycomb</groupId>
            <artifactId>translate-api</artifactId>
            <version>${hc.version}</version>
        </dependency>
        <dependency>
            <groupId>io.fd.honeycomb</groupId>
            <artifactId>translate-impl</artifactId>
            <version>${hc.version}</version>
        </dependency>
        <dependency>
            <groupId>io.fd.honeycomb</groupId>
            <artifactId>translate-utils</artifactId>
            <version>${hc.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>org.jgrapht</groupId>
                    <artifactId>jgrapht-core</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.jgrapht</groupId>
                    <artifactId>jgrapht-ext</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.tinyjee.jgraphx</groupId>
                    <artifactId>jgraphx</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.opendaylight.yangtools</groupId>
            <artifactId>concepts</artifactId>
        </dependency>
        <dependency>
            <groupId>org.opendaylight.mdsal</groupId>
            <artifactId>yang-binding</artifactId>
        </dependency>

        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>

        <!-- Testing Dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.opendaylight.yangtools</groupId>
                <artifactId>yang-maven-plugin</artifactId>
                <version>${yangtools.version}</version>
                <dependencies>
                    <dependency>
                        <groupId>io.frinx.yang.docs</groupId>
                        <artifactId>yang-docs-plugin-common</artifactId>
                        <version>${project.version}</version>
                        <type>jar</type>
                    </dependency>
                    <dependency>
                        <groupId>io.frinx.cli</groupId>
                        <artifactId>yang-docs-plugin</artifactId>
                        <version>${project.version}</version>
                        <type>jar</type>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <phase>process-classes</phase>
                        <id>yang-docs</id>
                        <goals>
                            <goal>generate-sources</goal>
                        </goals>
                        <configuration>
                            <codeGenerators>
                                <generator>
                                    <codeGeneratorClass>io.frinx.cli.unit.binding.ids.cli.YangDocsGenerator</codeGeneratorClass>
                                    <outputBaseDir>${salGeneratorPath}</outputBaseDir>
                                    <resourceBaseDir>${project.build.directory}/generated-sources/spi</resourceBaseDir>
                                </generator>
                            </codeGenerators>
                            <inspectDependencies>true</inspectDependencies>
                            <inspectOnlyDependencies>true</inspectOnlyDependencies>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <configuration>
                        <parallel>suites</parallel>
                        <threadCount>2</threadCount>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>